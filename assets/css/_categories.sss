  & .spot
    @media (min-width: 651px) and (max-width: 900px)
      grid-column: 1 / -1
    @media (max-width: 1244px)
      margin-bottom: 25px
    & img
      @media (min-width: 1245px)
        width: 615px
        height: 315px
      @media (min-width: 651px) and (max-width: 1244px)
        width: 100%
        height: 250px
      @media (max-width: 650px)
        height: 255px
  & .card
    @media (max-width: 1244px)
      margin-bottom: 25px
    & img
      @media (min-width: 1245px)
        width: 300px
        height: 200px
      @media (min-width: 651px) and (max-width: 1244px)
        width: 100%
        height: 250px
      @media (max-width: 650px)
        height: 255px
