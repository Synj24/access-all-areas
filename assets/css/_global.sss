body
  padding: 0px
  margin: 0px auto
  font-family: system-ui
  max-width: 1245px

a
  text-decoration: none
  color: var(--white)

a:hover
  color: var(--purple)

h1,
h2,
h3,
h4,
h5,
h6
  font-family: var(--header)

p,
a
  font-family: var(--body)
  font-size: 14px

h1
  font-size: 64px

h2
  font-size: 36px

h3
  font-size: 18px

h4
  font-size: 14px
