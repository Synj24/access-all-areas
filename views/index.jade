block latest-news
  section.latest-news
    .layout
      .section-label
        div
          h3 Latest News
        div
        div
        div
        a(href="/viewall").view view all

    .layout
      .grid-container
        - for news in contentful.posts
            .grid-item
              .image-container
                a(href= news._url)
                  img(src=asset(news.image))
              .copy-container
                a(href= news._url)
                  h4.headline= news.title
                if news.author
                  h4.author By: 
                    i.author #{news.author[0].fields.name}
                else
                  h4.author By: 
                    i.author Access team
                p.date= news.date



